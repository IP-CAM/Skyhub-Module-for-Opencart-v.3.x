{{ header }} {{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-skyhub" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }} ">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">

                <form action="{{ action }}" method="post" id="form-skyhub" class="form-horizontal">

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-email">{{ entry_email }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_skyhub_email" value="{{ module_skyhub_email }}" placeholder="{{ entry_email }}" class="form-control" id="input-email" required />
                            {% if  (error_email)  %}
                                <div class="text-danger">{{ error_email }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-token">{{ entry_token }}</label>
                        <div class="col-sm-10">
                            <input type="text" name="module_skyhub_token" value="{{ module_skyhub_token }}" placeholder="{{ entry_token }}" class="form-control" id="input-quality" required />
                            {% if  (error_token)  %}
                                <div class="text-danger">{{ error_token }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-percentage"><span data-toggle="tooltip" title="{{ help_percentage }}">{{ entry_percentage }}</span></label>
                        <div class="col-sm-10">
                            <input type="number" name="module_skyhub_amount_percentage" value="{{ module_skyhub_amount_percentage }}" placeholder="{{ entry_percentage }}" class="form-control" id="input-percentage" required min="0" step="1" max="100" />
                            {% if  (error_quality)  %}
                                <div class="text-danger">{{ error_quality }}</div>
                            {% endif %}
                        </div>
                    </div>


                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-prazo"><span data-toggle="tooltip" title="{{ help_prazo }}">{{ entry_prazo }}</span></label>
                        <div class="col-sm-10">
                            <input type="number" name="module_skyhub_prazo" value="{{ module_skyhub_prazo }}" placeholder="{{ entry_prazo }}" class="form-control" id="input-prazo" required min="0" step="1" max="100" />
                            {% if  (error_prazo)  %}
                                <div class="text-danger">{{ error_prazo }}</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status-update-product">{{ entry_status_update_product }}</label>
                        <div class="col-sm-10">
                            <select name="module_skyhub_status_update_product" id="input-status-update-product" class="form-control">
                                {% if module_skyhub_status_update_product %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_skyhub_status" id="input-status" class="form-control">
                                {% if module_skyhub_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}